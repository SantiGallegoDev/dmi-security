  description="Your trusted partner in modern security systems. We provide complete security solutions — from surveillance and access control to alarm monitoring — tailored to protect what matters most."
  theme="dark"
>
  <Navbar />
  <main id="main-content">
    <Hero />
    <CompaniesBanner />
    <About />
    <WhyChooseUs />
    <Services />
    <Testimonials />
    <Stats />
    <FAQs />
    <PayBill />
    <EmergencySupport />
    <Contact />
  </main>
  <Footer />
</BaseLayout>
