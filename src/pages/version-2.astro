---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import CompaniesBanner from "../components/CompaniesBanner.astro";
import About from "../components/About.astro";
import WhyChooseUs from "../components/WhyChooseUs.astro";
import Services from "../components/Services.astro";
import Testimonials from "../components/Testimonials.astro";
import Stats from "../components/Stats.astro";
import FAQs from "../components/FAQs.astro";
import PayBill from "../components/PayBill.astro";
import EmergencySupport from "../components/EmergencySupport.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
