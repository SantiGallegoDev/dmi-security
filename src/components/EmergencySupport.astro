---
import Container from "./ui/Container.astro";
import SectionHeading from "./ui/SectionHeading.astro";
---

<section id="emergency" class="relative bg-bg-dark py-20 sm:py-28 overflow-hidden">
  <Container>
    <SectionHeading
      title="24/7 Emergency Support"
      subtitle="Need immediate help? Fill out the form and our team will respond as soon as possible."
      light
    />

    <div class="reveal grid grid-cols-1 gap-10 items-center lg:grid-cols-2">
      <!-- Image -->
      <div class="relative hidden lg:block">
        <div class="overflow-hidden rounded-2xl shadow-2xl">
          <img
            src="/images/sections/support-headset.jpg"
            alt="Customer support team"
            class="w-full h-[500px] object-cover"
            loading="lazy"
          />
        </div>
        <div class="absolute -top-4 -right-4 rounded-xl bg-accent p-5 text-white shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        </div>
      </div>

      <!-- Form -->
      <div>
        <form
          id="emergency-form"
          class="space-y-5 rounded-2xl bg-white p-6 sm:p-8"
          novalidate
        >
          <div>
            <label for="name" class="mb-2 block text-sm font-medium text-dark">Full Name</label>
            <input type="text" id="name" name="name" required minlength="2" placeholder="John Doe" class="w-full rounded-xl border border-gray-200 bg-gray-50 px-4 py-3 text-dark placeholder-gray-400 transition-all focus:border-accent focus:ring-2 focus:ring-accent/15 focus:outline-none invalid:[&.touched]:border-red-400" />
            <p class="mt-1 hidden text-sm text-red-500" data-error="name">Please enter your full name.</p>
          </div>

          <div>
            <label for="email" class="mb-2 block text-sm font-medium text-dark">Email Address</label>
            <input type="email" id="email" name="email" required placeholder="john@example.com" class="w-full rounded-xl border border-gray-200 bg-gray-50 px-4 py-3 text-dark placeholder-gray-400 transition-all focus:border-accent focus:ring-2 focus:ring-accent/15 focus:outline-none invalid:[&.touched]:border-red-400" />
            <p class="mt-1 hidden text-sm text-red-500" data-error="email">Please enter a valid email address.</p>
          </div>

          <div>
            <label for="subject" class="mb-2 block text-sm font-medium text-dark">Subject</label>
            <input type="text" id="subject" name="subject" required minlength="2" placeholder="How can we help?" class="w-full rounded-xl border border-gray-200 bg-gray-50 px-4 py-3 text-dark placeholder-gray-400 transition-all focus:border-accent focus:ring-2 focus:ring-accent/15 focus:outline-none invalid:[&.touched]:border-red-400" />
            <p class="mt-1 hidden text-sm text-red-500" data-error="subject">Please enter a subject.</p>
          </div>

          <div>
            <label for="message" class="mb-2 block text-sm font-medium text-dark">Message</label>
            <textarea id="message" name="message" required minlength="10" rows="4" placeholder="Describe your emergency or concern..." class="w-full resize-y rounded-xl border border-gray-200 bg-gray-50 px-4 py-3 text-dark placeholder-gray-400 transition-all focus:border-accent focus:ring-2 focus:ring-accent/15 focus:outline-none invalid:[&.touched]:border-red-400"></textarea>
            <p class="mt-1 hidden text-sm text-red-500" data-error="message">Please describe your concern (at least 10 characters).</p>
          </div>

          <button type="submit" class="w-full cursor-pointer rounded-full bg-accent px-6 py-3.5 font-semibold text-white transition-all duration-300 hover:bg-accent-dark hover:shadow-lg hover:shadow-accent/20 active:scale-[0.98]">
            Send Emergency Request
          </button>

          <div id="form-success" class="hidden rounded-xl bg-green-50 border border-green-200 p-4 text-center text-green-700">
            Your message has been received. Our team will contact you shortly.
          </div>
          <div id="form-error" class="hidden rounded-xl bg-red-50 border border-red-200 p-4 text-center text-red-700">
            Something went wrong. Please call us directly at (800) 364-9049.
          </div>
        </form>
      </div>
    </div>
  </Container>
</section>

<script>
  function initForm() {
    const form = document.getElementById("emergency-form") as HTMLFormElement;
    if (!form) return;

    const inputs = form.querySelectorAll<HTMLInputElement | HTMLTextAreaElement>("input, textarea");

    inputs.forEach((input) => {
      input.addEventListener("blur", () => {
        input.classList.add("touched");
        validateField(input);
      });
      input.addEventListener("input", () => {
        if (input.classList.contains("touched")) validateField(input);
      });
    });

    function validateField(field: HTMLInputElement | HTMLTextAreaElement) {
      const errorEl = form.querySelector(`[data-error="${field.name}"]`) as HTMLElement;
      if (!errorEl) return;
      if (!field.validity.valid) {
        errorEl.classList.remove("hidden");
        field.setAttribute("aria-invalid", "true");
      } else {
        errorEl.classList.add("hidden");
        field.removeAttribute("aria-invalid");
      }
    }

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      inputs.forEach((input) => { input.classList.add("touched"); validateField(input); });
      if (!form.checkValidity()) return;
      const successEl = document.getElementById("form-success");
      if (successEl) {
        successEl.classList.remove("hidden");
        form.reset();
        inputs.forEach((input) => input.classList.remove("touched"));
        setTimeout(() => successEl.classList.add("hidden"), 5000);
      }
    });
  }

  document.addEventListener("DOMContentLoaded", initForm);
  document.addEventListener("astro:page-load", initForm);
</script>
