---
import Container from "./ui/Container.astro";
import Button from "./ui/Button.astro";
---

<section id="hero" class="relative overflow-hidden bg-white pt-28 pb-16 sm:pt-36 sm:pb-24 lg:pt-40 lg:pb-28">
  <div class="absolute top-0 right-0 -z-10 h-[600px] w-[600px] rounded-full bg-accent/5 blur-3xl"></div>
  <div class="absolute bottom-0 left-0 -z-10 h-[400px] w-[400px] rounded-full bg-accent/3 blur-3xl"></div>

  <Container class="relative z-10">
    <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
      <!-- Text -->
      <div class="text-center lg:text-left">
        <div class="hero-fade-in mb-6 inline-flex items-center gap-2 rounded-full border border-gray-200 bg-gray-50 px-4 py-1.5 text-sm font-medium text-text-light">
          <span class="inline-block h-2 w-2 rounded-full bg-accent"></span>
          Protection is key for today's living
        </div>

        <h1 class="hero-fade-in text-4xl font-bold leading-tight tracking-tight text-dark sm:text-5xl lg:text-6xl">
          Your Trusted Partner in
          <span class="text-accent">Modern Security</span> Systems
        </h1>

        <p class="hero-fade-in-delay mt-6 max-w-xl text-lg text-text-light sm:text-xl lg:mx-0 mx-auto">
          We provide complete security solutions — from surveillance and access
          control to alarm monitoring — tailored to protect what matters most.
        </p>

        <div class="hero-fade-in-delay-2 mt-8 flex flex-col items-center gap-4 sm:flex-row lg:justify-start justify-center">
          <Button href="#contact" variant="primary" class="text-base !px-8 !py-3.5">
            Get a Free Quote
          </Button>
          <Button href="#services" variant="outline" class="text-base !px-8 !py-3.5">
            Our Services
          </Button>
        </div>

        <div class="hero-fade-in-delay-2 mt-8 flex flex-wrap items-center justify-center gap-6 text-sm text-text-light lg:justify-start">
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Licensed & Insured
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            24/7 Support
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            10+ Years
          </div>
        </div>
      </div>

      <!-- Image collage -->
      <div class="hero-fade-in-delay relative grid grid-cols-2 gap-4">
        <div class="space-y-4">
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img src="/images/hero-bg.png" alt="Security control panel" class="w-full h-48 object-cover" loading="eager" />
          </div>
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img src="/images/sections/security-camera.jpg" alt="CCTV surveillance cameras" class="w-full h-64 object-cover" loading="eager" />
          </div>
        </div>
        <div class="space-y-4 pt-8">
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img src="/images/sections/office-building.jpg" alt="Commercial building security" class="w-full h-64 object-cover" loading="eager" />
          </div>
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img src="/images/sections/family-home.jpg" alt="Residential home protection" class="w-full h-48 object-cover" loading="eager" />
          </div>
        </div>
        <!-- Floating accent card -->
        <div class="absolute -bottom-4 left-1/2 -translate-x-1/2 rounded-xl bg-accent p-4 text-white shadow-lg z-10">
          <div class="text-center">
            <div class="text-2xl font-bold">24/7</div>
            <div class="text-xs font-medium text-white/80">Monitoring</div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
