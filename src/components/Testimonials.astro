---
import Container from "./ui/Container.astro";
import SectionHeading from "./ui/SectionHeading.astro";
import Button from "./ui/Button.astro";

const testimonials = [
  {
    name: "Sarah M.",
    role: "Homeowner",
    text: "DMI Security transformed our office building's security. The installation was seamless, and their 24/7 monitoring gives us complete peace of mind. Highly recommend their team!",
  },
  {
    name: "James T.",
    role: "Business Owner",
    text: "After a break-in scare, we called DMI and they had a full system installed within days. Professional, responsive, and truly caring about our family's safety.",
  },
  {
    name: "Linda R.",
    role: "Property Manager",
    text: "We've worked with several security companies over the years, but DMI stands out for their transparency and expertise. No hidden costs, no pressure — just honest, reliable service.",
  },
  {
    name: "Michael K.",
    role: "Warehouse Director",
    text: "The access control system DMI installed for our warehouse has been flawless. We can track who comes and goes in real-time. Outstanding technology and support.",
  },
  {
    name: "Patricia H.",
    role: "Office Manager",
    text: "From cameras to fire detection — DMI handled everything. Their integrated approach means we have one dashboard for all our security needs. It's been a game-changer.",
  },
];

const stars = Array(5).fill(0);
---

<section id="testimonials" class="bg-white py-20 sm:py-28">
  <Container>
    <SectionHeading
      title="Trusted Protection, Anytime, Anywhere"
      subtitle="We combine innovation and expertise to provide seamless safety solutions tailored to your needs."
    />

    <div class="reveal mb-12 text-center">
      <Button href="#about" variant="outline">More About Us</Button>
    </div>

    <!-- Stats -->
    <div id="stats-section" class="reveal mb-16 grid grid-cols-2 gap-6 text-center lg:grid-cols-4">
      <div>
        <div class="text-3xl font-bold text-accent sm:text-4xl">
          <span class="stat-number" data-value="95">0</span><span>%</span>
        </div>
        <p class="mt-1 text-sm text-text-light">First-Time Installation Success</p>
      </div>
      <div>
        <div class="text-3xl font-bold text-accent sm:text-4xl">
          <span class="stat-number" data-value="5">0</span><span>K+</span>
        </div>
        <p class="mt-1 text-sm text-text-light">Clients Secured Across Industries</p>
      </div>
      <div>
        <div class="text-3xl font-bold text-accent sm:text-4xl">
          <span>24/7</span>
        </div>
        <p class="mt-1 text-sm text-text-light">Support You Can Count On</p>
      </div>
      <div>
        <div class="text-3xl font-bold text-accent sm:text-4xl">
          <span class="stat-number" data-value="98">0</span><span>%</span>
        </div>
        <p class="mt-1 text-sm text-text-light">Customer Satisfaction</p>
      </div>
    </div>

    <!-- Carousel -->
    <div class="reveal relative overflow-hidden" data-delay="150">
      <div id="testimonial-track" class="flex transition-transform duration-500 ease-in-out">
        {
          testimonials.map((t) => (
            <div class="w-full flex-shrink-0 px-4">
              <div class="mx-auto max-w-2xl rounded-2xl border border-gray-200 bg-gray-50 p-8 sm:p-10 text-center">
                <div class="mb-4 flex justify-center gap-1">
                  {stars.map(() => (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5 text-amber-400"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <p class="mb-6 text-text leading-relaxed italic text-lg">
                  "{t.text}"
                </p>
                <p class="font-semibold text-dark">{t.name}</p>
                <p class="text-sm text-text-light">{t.role}</p>
              </div>
            </div>
          ))
        }
      </div>

      <!-- Arrows -->
      <button
        id="prev-btn"
        class="absolute top-1/2 left-2 -translate-y-1/2 rounded-full bg-white p-2.5 text-dark shadow-lg border border-gray-200 transition hover:bg-accent hover:text-white hover:border-accent"
        aria-label="Previous testimonial"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <button
        id="next-btn"
        class="absolute top-1/2 right-2 -translate-y-1/2 rounded-full bg-white p-2.5 text-dark shadow-lg border border-gray-200 transition hover:bg-accent hover:text-white hover:border-accent"
        aria-label="Next testimonial"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>

    <!-- Dots -->
    <div class="mt-8 flex justify-center gap-2" id="testimonial-dots">
      {
        testimonials.map((_, i) => (
          <button
            class:list={[
              "h-2.5 rounded-full transition-all duration-300",
              i === 0 ? "bg-accent w-8" : "bg-gray-300 w-2.5",
            ]}
            data-index={i}
            aria-label={`Go to testimonial ${i + 1}`}
          />
        ))
      }
    </div>
  </Container>
</section>

<script>
  function initCarousel() {
    const track = document.getElementById("testimonial-track") as HTMLElement;
    const dots = document.querySelectorAll("#testimonial-dots button");
    const prevBtn = document.getElementById("prev-btn");
    const nextBtn = document.getElementById("next-btn");

    if (!track || !prevBtn || !nextBtn) return;

    const total = dots.length;
    let current = 0;
    let interval: ReturnType<typeof setInterval>;

    function goTo(index: number) {
      current = ((index % total) + total) % total;
      track.style.transform = `translateX(-${current * 100}%)`;

      dots.forEach((dot, i) => {
        if (i === current) {
          dot.classList.add("bg-accent", "w-8");
          dot.classList.remove("bg-gray-300", "w-2.5");
        } else {
          dot.classList.remove("bg-accent", "w-8");
          dot.classList.add("bg-gray-300", "w-2.5");
        }
      });
    }

    function startAutoPlay() {
      interval = setInterval(() => goTo(current + 1), 5000);
    }

    function resetAutoPlay() {
      clearInterval(interval);
      startAutoPlay();
    }

    prevBtn.addEventListener("click", () => {
      goTo(current - 1);
      resetAutoPlay();
    });

    nextBtn.addEventListener("click", () => {
      goTo(current + 1);
      resetAutoPlay();
    });

    dots.forEach((dot) => {
      dot.addEventListener("click", () => {
        goTo(parseInt((dot as HTMLElement).dataset.index || "0"));
        resetAutoPlay();
      });
    });

    startAutoPlay();
  }

  function initStats() {
    const section = document.getElementById("stats-section");
    if (!section) return;
    const numbers = section.querySelectorAll<HTMLElement>(".stat-number");
    let animated = false;
    const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    if (prefersReducedMotion) {
      numbers.forEach((el) => { el.textContent = el.dataset.value || "0"; });
      return;
    }
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting && !animated) {
          animated = true;
          numbers.forEach((el) => {
            const target = parseInt(el.dataset.value || "0", 10);
            const duration = 2000;
            const start = performance.now();
            function update(now: number) {
              const elapsed = now - start;
              const progress = Math.min(elapsed / duration, 1);
              const eased = 1 - Math.pow(1 - progress, 3);
              el.textContent = Math.floor(eased * target).toString();
              if (progress < 1) requestAnimationFrame(update);
              else el.textContent = target.toString();
            }
            requestAnimationFrame(update);
          });
          observer.unobserve(section);
        }
      });
    }, { threshold: 0.3 });
    observer.observe(section);
  }

  document.addEventListener("DOMContentLoaded", () => { initCarousel(); initStats(); });
  document.addEventListener("astro:page-load", () => { initCarousel(); initStats(); });
</script>
