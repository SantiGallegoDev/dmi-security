---
import Container from "./ui/Container.astro";
import SectionHeading from "./ui/SectionHeading.astro";
---

<section id="contact" class="bg-bg-alt py-20 sm:py-28">
  <Container>
    <SectionHeading
      title="Get In Touch"
      subtitle="Ready to secure your property? Contact us today."
    />

    <div class="reveal grid grid-cols-1 gap-10 lg:grid-cols-2">
      <!-- Contact Info -->
      <div class="space-y-8">
        <div>
          <h3 class="mb-4 text-2xl font-semibold text-dark">
            Contact Information
          </h3>
          <p class="text-text-light leading-relaxed">
            Whether you need a new security system, maintenance, or emergency
            support — our team is here to help. Reach out and we'll get back to
            you promptly.
          </p>
        </div>

        <div class="space-y-5">
          <!-- Email -->
          <a
            href="mailto:info@dmisecurity.com"
            class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 transition-all hover:border-accent/30 hover:shadow-md"
          >
            <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-accent-light">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <p class="text-xs font-medium text-text-light">Email</p>
              <p class="font-medium text-dark">info@dmisecurity.com</p>
            </div>
          </a>

          <!-- Phone -->
          <a
            href="tel:+18003649049"
            class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 transition-all hover:border-accent/30 hover:shadow-md"
          >
            <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-accent-light">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <p class="text-xs font-medium text-text-light">Phone (24/7)</p>
              <p class="font-medium text-dark">(800) 364-9049</p>
            </div>
          </a>

          <!-- Address -->
          <div class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-accent-light">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-xs font-medium text-text-light">Address</p>
              <p class="font-medium text-dark">PO Box 788, Bound Brook, NJ 08805</p>
            </div>
          </div>

          <!-- Hours -->
          <div class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-accent-light">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-xs font-medium text-text-light">Business Hours</p>
              <p class="font-medium text-dark">Mon–Fri, 8AM–5PM</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Map -->
      <div class="overflow-hidden rounded-2xl border border-gray-200 shadow-sm">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3033.5!2d-74.5385!3d40.5684!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c3990b5c5e5b1d%3A0x0!2sBound+Brook%2C+NJ+08805!5e0!3m2!1sen!2sus!4v1700000000000"
          width="100%"
          height="100%"
          style="border:0; min-height: 450px;"
          allowfullscreen
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="DMI Security Systems location"
        ></iframe>
      </div>
    </div>
  </Container>
</section>
