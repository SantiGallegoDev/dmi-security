---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = "", hover = true } = Astro.props;
---

<div
  class:list={[
    "rounded-2xl bg-white p-6 sm:p-8 border border-gray-200",
    hover &&
      "transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:border-gray-300",
    className,
  ]}
>
  <slot />
</div>
